<h1>Utilisateurs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.reject{|user| user == current_user}.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Inviter','#' , :class=>"btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
