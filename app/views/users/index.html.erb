<h1>Utilisateurs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= button_to 'Show', user, :class=>"btn btn-sm btn-outline-info", :method=>:get%></td>
        <td><%= button_to 'Edit', edit_user_path(user), :class=>"btn btn-sm btn-outline-warning", :method=>:get%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
