<h1>Invitations</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.reject{|user| user == current_user}.each do |user| %>
      <% unless @event.attendees.include? user %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Inviter', {:controller => "events", :action => "invite", :id => user.id, :event_id => @event.id}, :class=>"btn btn-sm btn-success" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
