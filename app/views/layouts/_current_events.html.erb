  </thead>

  <tbody>
    <% @events.current.each do |event| %>
      <tr>
        <td><%= event.date.strftime("%d-%b-%Y") %></td>
        <td><%= event.place %></td>
        <td><%= event.creator.name %></td>
        <% if logged_in? %>
          <td><ul class="button_list_table">
            <li><%= link_to 'Show', event, :class=>"btn btn-sm btn-info", :method=>:get%></li>
            <!--<li><%= link_to 'Edit', edit_event_path(event), :class=>"btn btn-sm btn-warning", :method=>:get%></li>-->
            <% if !(event.attendees.include? current_user) %>
              <li><%= link_to 'Participer',subscribe_path(id: event.id) , :class=>"btn btn-sm btn-primary", :method=>:post %></li>
            <% end %>
          </ul></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
